<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateEditClient">

    <EditText
        android:id="@+id/txt_client_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="368dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btn_create_edit_client"
        app:layout_constraintEnd_toEndOf="@+id/btn_create_edit_client"
        app:layout_constraintStart_toStartOf="@+id/btn_create_edit_client" />

    <Button
        android:id="@+id/btn_create_edit_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.846" />

    <EditText
        android:id="@+id/txt_client_id_card"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Cédula"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/txt_client_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_client_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_client_name" />

    <EditText
        android:id="@+id/txt_client_phone"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="Teléfono"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/txt_client_name"
        app:layout_constraintStart_toStartOf="@+id/txt_client_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_client_name" />

    <EditText
        android:id="@+id/txt_client_residence"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="170dp"
        android:ems="10"
        android:hint="Domicilio"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/txt_client_name"
        app:layout_constraintStart_toStartOf="@+id/txt_client_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_client_name" />

    <CheckBox
        android:id="@+id/cb_client_preferential"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Cliente Preferencial"
        app:layout_constraintEnd_toEndOf="@+id/txt_client_residence"
        app:layout_constraintStart_toStartOf="@+id/txt_client_residence"
        app:layout_constraintTop_toBottomOf="@+id/txt_client_residence" />

    <TextView
        android:id="@+id/txt_client_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="Crear un cliente"
        app:layout_constraintBottom_toTopOf="@+id/txt_client_name"
        app:layout_constraintEnd_toEndOf="@+id/txt_client_name"
        app:layout_constraintStart_toStartOf="@+id/txt_client_name" />

</androidx.constraintlayout.widget.ConstraintLayout>